@model List<AcunmedyaAkademiPortfolyo.Models.TblService>
@{
    ViewBag.Title = "ServicesList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Hizmetlerim</h3>

<table class="table table-bordered">


    <tr>
        <th>Hizmet Id</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet ikonu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.ServiceId</td>
            <td>@item.ServiceTitle</td>
            <td>@item.Description</td>
            <td>@item.IconUrl</td>            
            <td><a href="/Services/DeleteServices/@item.ServiceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Services/UpdateServices/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Services/CreateServices/" class="btn btn-primary">Yeni Hizmet Girişi</a>



