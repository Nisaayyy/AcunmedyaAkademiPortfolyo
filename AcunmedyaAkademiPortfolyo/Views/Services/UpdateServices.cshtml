@model AcunmedyaAkademiPortfolyo.Models.TblService
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetlerim Güncelleme Sayfası</h2>
<form method="post">
    <label>Hizmet Id</label>
    @Html.TextBoxFor(x => x.ServiceId, new { @class = "form-control" })
    <br />
    <label>Hizmet Adı</label>
    @Html.TextBoxFor(x => x.ServiceTitle, new { @class = "form-control" })
    <br />
    <label>Hizmet Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Hizmet Resmi</label>
    @Html.TextBoxFor(x => x.IconUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Hizmetlerim Güncelle</button>
</form>

