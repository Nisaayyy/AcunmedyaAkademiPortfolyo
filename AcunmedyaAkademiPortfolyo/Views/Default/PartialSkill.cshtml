@model List<AcunmedyaAkademiPortfolyo.Models.TableSkillD>
<section id="skills" class="skills section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Yeteneklerim</h2>
        <p>Çalışma alanım ve kullandığım programlama dilleri & teknolojileri hakkında detaylı bilgilere aşağıdan ulaşabilirsiniz. Yazılım geliştirme sürecinde farklı teknolojileri kullanarak çeşitli projeler üzerinde çalışıyorum. Mobil uygulama geliştirme, web teknolojileri ve algoritma tasarımı gibi alanlarda kendimi sürekli geliştiriyorum.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row skills-content skills-animation">

            <div class="col-lg-6">


                @foreach (var item in Model.Take(3))
                {

                    <div class="progress">
                        <span class="skill"><span>@item.SkillTitle</span> <i class="val">@item.SkillValue%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item.SkillValue" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                }

            </div>

            <div class="col-lg-6">
                @foreach (var item in Model.Skip(3).Take(3))
                {
                    <div class="progress">
                        <span class="skill"><span>@item.SkillTitle</span> <i class="val">@item.SkillValue%</i></span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item.SkillValue" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                }

            </div>



        </div>

    </div>

</section>