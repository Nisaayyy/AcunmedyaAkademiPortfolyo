@model List<AcunmedyaAkademiPortfolyo.Models.TblStatistic>


<section id="stats" class="stats section">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            @foreach (var item in Model)
            {



                <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                    <i class="fas fa-eye" style="font-size: 24px !important"></i>
                    <div class="stats-item">
                        <span data-purecounter-start="0" data-purecounter-end=@item.StatsNumber data-purecounter-duration="1" class="purecounter"></span>
                        <p>@item.StatsName</p>
                    </div>
                </div>


            }
        </div>

        </div>

</section>
