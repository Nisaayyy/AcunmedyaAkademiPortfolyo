@model List<AcunmedyaAkademiPortfolyo.Models.TblProject>
@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Projelerim</h3>

<table class="table table-bordered">


    <tr>
        <th>Proje Id</th>
        <th>Proje Adı</th>
        <th>Proje Açıklaması</th>
        <th>Proje Resmi</th>
        <th>Proje Kategorisi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Projectld</td>
            <td>@item.ProjectTitle</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl"</td>
            <td>@item.CategoryId</td>
            <td><a href="/Project/DeleteProject/@item.Projectld" class="btn btn-danger">Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.Projectld" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Project/CreateProject/" class="btn btn-primary">Yeni Proje Girişi</a>

