@model AcunmedyaAkademiPortfolyo.Models.TableTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>
<form method="post">
    <label>Referans Id</label>
    @Html.TextBoxFor(x => x.Testimoniald, new { @class = "form-control" })
    <br />
    <label>Referans Adı</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Referans Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Referans Açıklaması</label>
    @Html.TextBoxFor(x => x.CommentDetail, new { @class = "form-control" })
    <br />
    <label>Referans Resmi</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Referans Güncelle</button>
</form>

